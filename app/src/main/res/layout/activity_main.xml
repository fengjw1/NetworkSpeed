<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:clickable="false"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/network_home_bg"
    >

    <com.ktc.networkspeed.view.MLinearLayout
        android:id="@+id/network_home_diagnose_ll"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="62dp"
        android:background="@drawable/network_home_diagnosis_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/network_home_icon_diagnosis"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diagnose_network_title"
            android:textAllCaps="false"
            android:textColor="#B2E7C3"
            android:textSize="30sp"/>

    </com.ktc.networkspeed.view.MLinearLayout>


    <com.ktc.networkspeed.view.MLinearLayout
        android:id="@+id/network_home_speed_ll"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_alignBottom="@+id/network_home_diagnose_ll"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:background="@drawable/network_home_speed_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/network_home_icon_speed"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAllCaps="false"
            android:textColor="#B2E7C3"
            android:textSize="26sp"/>
    </com.ktc.networkspeed.view.MLinearLayout>

    <com.ktc.networkspeed.view.MLinearLayout
        android:id="@+id/network_home_update_ll"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_below="@+id/network_home_memory_ll"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/home_update_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/updatemanager_icon"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_home_update_manager"
            android:textAllCaps="false"
            android:textColor="#B2E7C3"
            android:textSize="26sp"/>
    </com.ktc.networkspeed.view.MLinearLayout>

    <com.ktc.networkspeed.view.MLinearLayout
        android:id="@+id/network_home_memory_ll"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/network_home_diagnose_ll"
        android:layout_marginStart="318dp"
        android:background="@drawable/home_memory_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/memorymanager_icon"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_home_memory_manager"
            android:textAllCaps="false"
            android:textColor="#B2E7C3"
            android:textSize="26sp"/>
    </com.ktc.networkspeed.view.MLinearLayout>

    <com.ktc.networkspeed.view.MLinearLayout
        android:id="@+id/network_home_file_ll"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/home_file_bg"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/filemanager_icon"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_home_file_manager"
            android:textAllCaps="false"
            android:textColor="#B2E7C3"
            android:textSize="26sp"/>
    </com.ktc.networkspeed.view.MLinearLayout>

</RelativeLayout>